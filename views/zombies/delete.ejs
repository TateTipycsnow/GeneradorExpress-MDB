<% include ../_header %>
<div class="row container">
    <div class="col-md-12 container">
        <form action="/zombies/delete/<%= Zombie.id %>?_method=DELETE" method="POST">
            <div class="form-group">
                <label for="">
                    Nombre
                </label>
                <input type="text" class="form-control" name="Name" value="<%=Zombie.Name%>" disabled>
            </div>
            <div class="form-group">
                <label for="">
                    Email
                </label>
                <input type="email" class="form-control" name="Mail" value="<%=Zombie.Mail%>" disabled>
            </div>
            <div class="form-group">
                <label for="">
                    Tipo
                </label>
                <input type="text" class="form-control" name="Type" value="<%=Zombie.Type%>" disabled>
            </div>
            <button class="btn btn-dark"><i class="fas fa-trash"></i>Eliminar zombie</button>
        </form>
    </div>
</div>
<% include ../_footer %>