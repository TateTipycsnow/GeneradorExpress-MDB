<% include ../_header %>
<div class="row container">
    <div class="col-md-12 container">
        <form action="/zombies/edit/<%= Zombie.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="">
                    Nombre
                </label>
                <input type="text" class="form-control" name="Name" value="<%=Zombie.Name%>">
            </div>
            <div class="form-group">
                <label for="">
                    Email
                </label>
                <input type="email" class="form-control" name="Mail" value="<%=Zombie.Mail%>">
            </div>
            <div class="form-group">
                <label for="">
                    Tipo
                </label>
                <input type="text" class="form-control" name="Type" value="<%=Zombie.Type%>">
            </div>
            <button class="btn btn-dark"><i class="fas fa-edit"></i>Actualizar zombie</button>
        </form>
    </div>
</div>
<% include ../_footer %>