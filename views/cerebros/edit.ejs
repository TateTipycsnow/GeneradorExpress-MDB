<% include ../_header %>
<div class="row container">
    <div class="col-md-12 container">
        <form action="/cerebros/edit/<%= Cerebro.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="">
                    Descrpcion
                </label>
                <input type="text" class="form-control" name="Description" value="<%=Cerebro.Description%>">
            </div>
            <div class="form-group">
                <label for="">
                    Sabor
                </label>
                <input type="text" class="form-control" name="Flavor" value="<%=Cerebro.Flavor%>">
            </div>
            <div class="form-group">
                <label for="">
                    Precio
                </label>
                $ <input type="text" class="form-control" name="Price" value="<%=Cerebro.Price%>">
            </div>
            <div class="form-group">
                <label for="">
                    Imagen
                </label>
                $ <input type="text" class="form-control" name="Picture" value="<%=Cerebro.Picture%>">
            </div>
            <button class="btn btn-dark"><i class="fas fa-edit"></i>Actualizar cerebro</button>
        </form>
    </div>
</div>
<% include ../_footer %>