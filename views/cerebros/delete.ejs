<% include ../_header %>
<div class="row container">
    <div class="col-md-12 container">
        <form action="/cerebros/delete/<%= Cerebro.id %>?_method=DELETE" method="POST">
            <div class="form-group">
                <label for="">
                    Descrpcion
                </label>
                <input type="text" class="form-control" name="Descrption" value="<%=Cerebro.Description%>" disabled>
            </div>
            <div class="form-group">
                <label for="">
                    Sabor
                </label>
                <input type="text" class="form-control" name="Flavor" value="<%=Cerebro.Flavor%>" disabled>
            </div>
            <div class="form-group">
                <label for="">
                    Precio
                </label>
                $ <input type="text" class="form-control" name="Price" value="<%=Cerebro.Price%>" disabled>
            </div>
            <div class="form-group">
                <label for="">
                    Imagen
                </label>
                $ <input type="text" class="form-control" name="Picture" value="<%=Cerebro.Picture%>" disabled>
            </div>
            <button class="btn btn-dark"><i class="fas fa-trash"></i>Eliminar cerebro</button>
        </form>
    </div>
</div>
<% include ../_footer %>